@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model == null)
{
    <h2>"Not Found"</h2>
}
else 
{ 
    <h2>@Model.Name</h2>
    <ul>
        <li>Release Date : @Model.ReleaseDate</li>
        <li>Date Added : @Model.DateAdded</li>
        <li>Stock : @Model.Stock</li>
        <li>Genre : @Model.Genre.Name</li>
    </ul>
}





