@model Vidly.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model == null)
{
    <h2>Not Found!!</h2>
}
else
{
    <h2>@Model.Name</h2>
    <ul>
        <li>Membership Type : @Model.MembershipType.Name</li>
        @if (!string.IsNullOrEmpty(Model.DOB))
        {
            <li>Birthdate : @Model.DOB</li>
        }
    </ul>
}
